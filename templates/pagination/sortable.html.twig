<a {% for attr, value in options | merge({class: 'btn btn-warning'} ) %} {{ attr }}="{{ value }}" {% endfor %}>
	<span class="float-end fs-5">
		{% if sorted %}
			{% if direction == 'desc' %}
				<i class="fa fa-sort-down"></i>
			{% else %}
				<i class="fa fa-sort-up"></i>
			{% endif %}
		{% else %}
			<i class="fa fa-sort"></i>
		{% endif %}
	</span>
	<span class="fs-5 me-3">{{ title }}</span>

</a>
