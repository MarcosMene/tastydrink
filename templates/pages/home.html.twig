					<img src="{{ asset('assets/images/bar.jpeg') }}" alt="" class="img-fluid"/>
				</div>
			</div>
		</div>

		{# -----------DIVISOR #}
		<div class="divisor divisor-lg"></div>

		{# --------------------------------- NEW PRODUCTS #}
		<section class="text-center mt-5">
			<h2 class="headers text-capitalize wrapper-max">New products</h2>
			<div class="wrapper info wrapper-max m-auto">
				<div class="row d-flex align-items-center justify-content-between ">

					{% for product in newProducts %}
						<div class="col-12 col-sm-6 col-md-4 my-2 ">
							<div class="product-card m-auto img-hover-zoom rounded">
								<a href="{{ path('app_product', { slug: product.slug }) }}">
									<img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid"/></a>
							</div>
						</div>
						{%endfor%}

					</div>

					{# button add basket #}
					<div class="col-12 text-center mt-5">
						<a href="{{path('app_shop')}}" class="btn btn-outline mt-2">See all products</a>
					</div>
				</div>
			</section>

			{# END PRODUCTS #}

			{# -----------DIVISOR #}
			<div class="divisor divisor-lg"></div>

			{# -------------REVIEWS CLIENTS  #}
			{% if reviewsClient|length > 0%}
				<section class="text-center mt-5 client">
					<h2 class="headers">Our clients' opinion</h2>
					<div class="wrapper  bg-light text-black  mx-auto py-5">
						<div id="carouselClientOpinion" class="carousel slide" data-bs-ride="carousel">

							<div class="carousel-inner text-center">

								{% for key, reviews in reviewsClient %}
									<div {% if key == 0 %} class="carousel-item active" {% else %} class="carousel-item" {% endif %}>
										<div
											class="client-carousel d-block mx-auto d-flex flex-column bg-white rounded-3 align-items-center justify-content-center p-5">

											{# QUOTE LEFT  #}
											<div class="text-start text-light w-100">
												<i class="fa-solid fa-quote-left fa-2xl"></i>
											</div>

											{# STARS  #}
											<p>
												{% for i in 1..5 %}
													{% if i <= reviews.rate %}
														<i class="fas fa-star text-warning"></i>
													{% else %}
														<i class="far fa-star text-warning"></i>
													{% endif %}
												{% endfor %}
											</p>

											<p class="p-5">{{ reviews.comment }}</p>

											{# QUOTE RIGHT  #}
											<div class="text-end text-light w-100">
												<i class="fa-solid fa-quote-right fa-2xl"></i>
											</div>
											<div class="text-start w-100">
												<h5 class="fw-bold">{{ reviews.firstname }}</h5>
											</div>
										</div>
									</div>
								{% endfor %}
							</div>
							{%if reviewsClient|length >1 %}
								<button class="carousel-control-prev client" href="#carouselClientOpinion" role="button" data-bs-slide="prev" style="width: 15%;">
									<span class="carousel-control-prev-icon" aria-hidden="true"></span>
									<span class="visually-hidden">Previous</span>
								</button>
								<button class="carousel-control-next client" href="#carouselClientOpinion" role="button" data-bs-slide="next" style="width: 15%; ">
									<span class="carousel-control-next-icon" aria-hidden="true"></span>
									<span class="visually-hidden">Next</span>
								</button>
							{% endif %}
						</div>
						{# ----------------BUTTON----------------- #}
						<a href="{{path('app_opinion_client')}} " class=" btn btn-primary btn-link mt-5 ">Give your opinion</a>
					</div>
				</section>
				{# -----------DIVISOR #}
				<div class="divisor divisor-lg"></div>
			{% endif %}


			{# -----------------OPENING HOURS #}

			{% if barSchedules|length >0 and shopSchedules|length>0 %}
				<section class="text-center mt-5">
					<h2 class="headers">Opening Hours</h2>
					<div class="mt-5 mx-auto table-hours mb-5">
						<div class="row justify-content-center">
							<div class="col-0 col-sm-1col-lg-0 d-none"></div>
							<div class="col-0 col-lg-3 d-flex align-items-stretch p-0 border border-light d-none d-lg-block">
								<img src="{{ asset('assets/images/open.jpeg') }}" alt="open hours sign" width="100%" height="100%"/>
							</div>
							<div
								class="col-12 col-sm-5 col-lg-3 p-4 border border-light">

								{# SHOP TIME  #}
								<h3 class="sub-titles text-uppercase fw-medium">Shop</h3>
								{% for schedule in shopSchedules %}
									<p>
										<span>{{ schedule.day }}:</span>

										<span class="open-time">{{ schedule.openTime|date('G') }}h</span>
										-
										<span class="close-time">{{ schedule.closeTime|date('G') }}h</span>
									</p>
								{% endfor %}

							</div>
							<div
								class="col-12 col-sm-5 col-lg-3 p-4 border border-light">

								{# BAR TIME  #}
								<h3 class="sub-titles text-uppercase fw-medium">Bar</h3>
								{% for schedule in barSchedules %}
									<p>
										<span>{{ schedule.day }}:</span>

										<span class="open-time">{{ schedule.openTime|date('G') }}h</span>
										-
										<span class="close-time">{{ schedule.closeTime|date('G') }}h</span>
									</p>
								{% endfor %}

							</div>
							<div class="col-0 col-sm-1 col-lg-0 d-none"></div>
						</div>
					</div>
				</section>
			{% else %}

				{# VACATION MESSAGE  #}
				<div class="text-capitalize fs-1 bg-light p-5 text-center text-black">We're on holiday. Tasky Drink will open its doors at the end of the month. See you soon.</div>
			{% endif %}

			{# -----------DIVISOR #}
			<div class="divisor divisor-lg"></div>

