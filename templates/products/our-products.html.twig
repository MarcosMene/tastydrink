{% extends 'base.html.twig' %}

{% block title %}
  Tasty Drink - Welcome
{% endblock %}

{% block content %}
  {# -----------------breadcrump #}
  <div class="mt-4 mb-1 mb-md-0 breadcrumbs">
    <div class="d-flex align-items-start justify-content-between mx-0">
      <div class="p-0">
        <ul class="breadcrumb p-0">
          <li>
            <a href="#">All drinks</a>
          </li>
          <li>Beers</li>
        </ul>
      </div>
      <div class="p-0">
        <a href="" class="back-to"><= Back to products</a>
      </div>
    </div>
  </div>

  <div class="row product-container"></div>

  <div class="row">
    {# --------Accordion #}
    <div class="col-12 col-lg-3 products-filter">
      <div class="wrapper-filter info wrapper-max m-auto mb-3 p-1">
        <div class="accordion" id="accordionExample">
          <article class="accordion-item">
            <h2 class="accordion-header" id="headingOne"><button class="accordion-button" type="button" data-bs-toggle="collapse" data-bs-target="#collapseOne" aria-expanded="true" aria-controls="collapseOne">Filter by</button></h2>
            <div id="collapseOne" class="accordion-collapse collapse show" aria-labelledby="headingOne" data-bs-parent="#accordionExample">
              <div class="accordion-body">
                <form>
                  <div class="form-group">
                    <label for="findDrink">Find a drink</label>
                    <input type="text" class="form-control" id="findDrink" aria-describedby="findDrink" placeholder="ex. beer" />
                  </div>

                  {# ----------country #}
                  <p class="mt-4 mb-1 filter-title">Country</p>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked />
                    <label class="form-check-label" for="flexCheckDefault">France(22)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" />
                    <label class="form-check-label" for="flexCheckChecked">Italy(10)</label>
                  </div>

                  {# ----------vintage #}
                  <p class="mt-4 mb-1 filter-title">Year</p>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                    <label class="form-check-label" for="flexCheckDefault">2021(22)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked />
                    <label class="form-check-label" for="flexCheckChecked">2022(10)</label>
                  </div>

                  {# ----------Ingredients #}
                  <p class="mt-4 mb-1 filter-title">Ingredients</p>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" checked />
                    <label class="form-check-label" for="flexCheckDefault">Plants/flowers(22)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" />
                    <label class="form-check-label" for="flexCheckChecked">With fruit(10)</label>
                  </div>

                  {# ----------Capacity #}
                  <p class="mt-4 mb-1 filter-title">Capacity</p>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault" />
                    <label class="form-check-label" for="flexCheckDefault">75cl(22)</label>
                  </div>
                  <div class="form-check">
                    <input class="form-check-input" type="checkbox" value="" id="flexCheckChecked" checked />
                    <label class="form-check-label" for="flexCheckChecked">44cl</label>
                  </div>

                  {# ----------PRICE #}
                  <label for="customRange1" class="form-label filter-title mt-4">Price</label>
                  <input type="range" class="form-range" id="customRange1" />
                  <button type="submit" class="btn btn-primary">Submit</button>
                </form>
              </div>
            </div>
          </article>
        </div>
      </div>
    </div>

    {# ------------DRINKS total and sort by #}
    <div class="col-12 col-lg-9 products">
      <div class="d-flex justify-content-between align-items-center">
        <article>
          <h3 class="products-quantity">320 products</h3>
        </article>
        <div class="products-sort d-flex justify-content-between">
          <div>Sort By:</div>
          <div class="d-grid gap-2">
            <button class="btn btn-outline-primary ms-4" type="button">Price <span><i class="fa-solid fa-chevron-up"></i></span><span><i class="fa-solid fa-chevron-down"></i></span></button>
          </div>
          <div class="d-grid gap-2">
            <button class="btn btn-outline-primary ms-4" type="button">Year <span><i class="fa-solid fa-chevron-up"></i></span><span><i class="fa-solid fa-chevron-down"></i></span></button>
          </div>
        </div>
      </div>

      {# -----------CARDS #}
      <div class="wrapper info wrapper-max mt-3 p-sm-3 p-lg-4 p-xl-5">
        <div class="row gx-4 wrapper-max d-flex justify-content-center">
          {% for product in products %}
            {% include '_partials/_card-product.html.twig' %}
          {% endfor %}
        </div>

        {# ---------- pagination #}
        {# <div class="pagination">
          <div class="pagination-buttons">
            <div class="prev-button">
              <i class="fa-solid fa-chevron-left"></i>
            </div>
            <div class="pages">1 2 3 4 5</div>
            <div class="next-button">
              <i class="fa-solid fa-chevron-right"></i>
            </div>
          </div>
        </div> #}
      </div>
    </div>
  </div>
{% endblock %}
