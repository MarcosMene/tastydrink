{# layout to show detail orders on easyadmin #}
{% extends '@!EasyAdmin/layout.html.twig' %}
{% block main %}

	<h2>Review</h2>
	<hr>
	<p>
		<strong>review ID:</strong>
		{{review.id}}
	</p>
	<p>
		<strong>User:</strong>
		{{review.user}}
	</p>
	<p>
		<strong>Product:</strong>
		{{review.product}}
	</p>

	<p>
		<strong>Review description:</strong>
		{{review.review}}
	</p>
	<p>
		<strong>Status review:</strong>
		{% if review.isIsApproved %}
			<span class="bg-success text-white px-2 py-1 rounded">This review is confirmed</span>
		{% else %}
			<span class="bg-danger text-white px-2 py-1 rounded">This review is not approved</span>
		{% endif %}
	</p>
</div>{% endblock %}
