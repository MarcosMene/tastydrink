{% extends 'base.html.twig' %}

{% block title %}Tasty Drink - Age verification
{% endblock %}

{% block body %}
	<h1>Age Verification</h1>
	<form action="{{ path('verify_age') }}" method="post">
		<div class="mb-3">
			<label for="age" class="form-label text-black">Enter your age</label>
			<input type="number" class="form-control" id="age" name="age" required>
		</div>
		<button type="submit" class="btn btn-primary">Submit</button>
	</form>
{% endblock %}
