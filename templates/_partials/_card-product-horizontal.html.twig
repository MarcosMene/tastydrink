<div class="col-12">
  <div class="card border-white mb-3">
    <div class="row g-0">
      <div class="col-md-3 bg-light">
        <img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid" style="height: 100%; width:100%;" />
      </div>
      <div class="col-md-9 bg-light px-1 px-sm-4">
        <div class="card-body">
          <article class="d-flex justify-content-between">
            <div class="card-titles d-flex flex-column">
              <h2 class="card-title text-uppercase">{{ product.name }}</h2>
              <h3 class="text-capitalize mt-2">{{ product.subtitle }}</h3>
            </div>
            <div class="reviews d-flex align-items-end flex-column">
              <div class="reviews-title">5 reviews</div>
              <div class="reviews-star">
                <i class="fa-solid fa-star full-star"></i>
                <i class="fa-solid fa-star full-star"></i>
                <i class="fa-solid fa-star full-star"></i>
                <i class="fa-solid fa-star full-star"></i>
                <i class="fa-regular fa-star border-star"></i>
              </div>
            </div>
          </article>
          <div class="row d-flex justify-content-end align-items-start">
            <div class="col-7">
              <div class="card-text">
                Origin: <span>France</span>
              </div>
              <div class="card-text">
                Category: <span>{{ product.category }}</span>
              </div>
              <div class="card-text">
                Year: <span>2021</span>
              </div>
              <div class="card-text">
                Quatity: <span>100cl</span>
              </div>
            </div>
            <div class="col-5 text-end">
              {# quantity #}
              <p class="card-available-text mx-0 mx-md-1">
                <i class="fa-solid fa-check"></i>Available in store
              </p>

              <div class="products-price text-end my-3">
                <span class="card-price">{{ product.pricewt|price }}</span>
              </div>
            </div>
          </div>
          {# divisor #}
          <div class="divisor-line my-2"></div>
          {# product description #}
          <div class="product-description my-3 lead">{{ product.description|raw }}</div>

          {# CARD BOTTOM #}
          <div class="mt-5 row card-bottom d-flex flex-column-reverse align-items-center align-items-lg-start flex-lg-row">
            <div class="col-md-12 col-lg-6">
              <div class="social-networks text-center text-lg-start">
                <p class="social-networks-message">Share this product on your favorite social networks.</p>
                <div class="social-networks-icon my-2">
                  <i class="fa-brands fa-pinterest"></i>
                  <i class="fa-brands fa-twitter"></i>
                  <i class="fa-brands fa-linkedin"></i>
                  <i class="fa-brands fa-facebook"></i>
                  <i class="fa-solid fa-envelope"></i>
                </div>
              </div>
            </div>
            <div class="col-md-12 col-lg-6 text-center text-lg-end mb-4 mt-lg-0">
              <a href="{{ path('app_cart_add', { id: product.id }) }}" class="btn btn-primary btn-link">Add to basket</a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
