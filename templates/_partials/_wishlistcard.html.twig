<div class="row d-flex align-items-start justify-content-center">
	{% for product in app.user.wishlists %}
		<div class="col-sm-6 col-md-4 col-lg-3 text-center m-3 bg-white p-3 rounded shadow">
			<a href="{{ path('app_product', { slug: product.slug }) }}" class="text-decoration-none">
				<img src="/uploads/products/{{ product.illustration }}" alt="{{ product.name }}" class="img-fluid mx-auto rounded mb-2" loading="lazy"/>
				<p class="text-black text-capitalize h-1 fw-medium m-0">{{ product.name }}</p>
			</a>
			<p class="d-block text-black">{{ product.pricewt|price }}</p>
			{# buttons #}

			<a href="{{ path('app_account_wishlist_remove', { id: product.id }) }}" class="delete text-black btn btn-outline-primary fw-medium">Delete</a>
		</div>
	{% endfor %}
</div>
