<div class="col-md-6 col-lg-4 mb-3">
	<div class="card rounded p-3">
		<div class="card-body">
			<div class="card-title text-capitalize">{{ address.name }}</div>
			<p class="card-text">
				{{ address.address }}<br/>
				{{ address.postal }},{{ address.city }},
				{{ address.country }}<br/>
			</p>
			{# divisor #}
			<div class="divisor my-3"></div>
			<div class="address">
				<a href="{{ path('app_account_address_form', { id: address.id }) }}" class="change">Modify</a>
				|
				<form action="{{ path('app_account_address_delete', {id: address.id}) }}" method="post" class="d-inline">
					<input type="hidden" name="_token" value="{{ csrf_token('deleteAddress' ~ address.id) }}">
					<button type="submit" class="btn btn-buttonSubmit cancel" onclick="return confirmDelete(event)">Delete</button>
				</form>
			</div>
		</div>
	</div>
</div>
