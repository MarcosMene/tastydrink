{% extends 'base.html.twig' %}

{% block title %}
	Tasty Drink - Change password
{% endblock %}

{% block body %}
	<div class="container">
		<div class="mt-5">
			<h1 class="main-titles text-center">My account</h1>
		</div>

		<div class="wrapper account">
			<div class="row p-2">
				<div class="col-md-12 col-lg-3 mb-3">
					{% include 'account/_menu.html.twig' %}
				</div>
				<div class="col-md-12 col-lg-9 px-4 py-2 bg-light rounded">
					<h2 class="text-center text-black mt-3">My whishlist</h2>
					<div class="text-start">
						<p class="text-info h5 fw-light mt-3 mb-5 fw-medium">{{ app.user.wishlists|length }}
							wish(es) in your list.</p>
					</div>

					{% if (app.user.wishlists|length) > 0 %}
						{% include '_partials/_wishlistcard.html.twig' %}
					{% else %}
						<div class="text-center w-100 p-5">
							<p class="text-dark fw-medium bg-white border border-secondary rounded py-4 px-5">
								Your wishlist is empty<br/>
							</p>
						</div>
					{% endif %}
				</div>
			</div>
		</div>
	</div>
{% endblock %}
